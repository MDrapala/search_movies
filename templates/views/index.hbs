<html>
  <head>
    <title>Search movies</title>
    <meta charset="utf-8" />
    <link rel="icon" href="/assets/pictures/movies.png" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="min-h-screen bg-gray-100 flex w-full w-1/2 gap-4">
      <div class="container bg-indigo-500 rounded-lg p-14">
        <h1 class="text-center font-bold text-white text-4xl mb-5">Find the
          perfect movie name</h1>
        <div
          class="sm:flex items-center bg-white rounded-lg overflow-hidden px-2 py-1 justify-between"
        >
          <input
            class="text-base text-gray-400 flex-grow outline-none px-2 py-2"
            type="text"
            placeholder="Search your movie name"
            id="textInput"
          />
        </div>
      </div>
      <div class="max-w-2xl">
        <div
          class="bg-white shadow-md rounded-lg max-w-sm dark:bg-gray-800 dark:border-gray-700"
        >
          <img class="rounded-t-lg p-8" alt="product image" id="pictures" />
          <div class="px-5 pb-5">
            <div class="flex items-center justify-between">
              <span
                class="text-xl font-bold text-gray-900 dark:text-white"
                id="title"
              ></span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/app.js"></script>
  </body>
</html>