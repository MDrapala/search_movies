<html>
  <head>
    <title>{{title}}</title>
    <meta charset="utf-8" />
    <link rel="icon" href="/assets/pictures/movies.png" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="container mt-5">
    <p>Rechercher les informations d'un film via son titre!</p>
    <form class="form-inline">
      <button type="submit" class="btn btn-success mb-2">Rechercher</button>
    </form>
    <p id="error"></p>
    <hr />
    <div class="row">
      <div class="col-sm-6">
        <p id="message-2"><img
            src="http://image.tmdb.org/t/p/w500{{pictures}}"
          /></p>
      </div>
      <div class="col-sm-6">
        <p id="message-1">{{title}}</p>
        <p id="message-3">{{describe}}</p>
        <div class="row">
          <div class="col-sm-6">
            <p id="message-4">{{date}}</p>
          </div>
          <div class="col-sm-6">
            <p id="message-5">{{language}}</p>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/app.js"></script>
  </body>
</html>